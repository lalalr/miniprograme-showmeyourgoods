
.goods-box{
  padding: .5em;
  height: 7em;
  background-color: aqua;
  margin:.5em;
  flex-direction:row;
  display: flex;
  overflow:hidden;
}
.goods-list{
  flex-direction:column;
}
.cate-side{
  width: 20vw;
  height: 100vh;
  background-color: thistle;
}
.cate-box{
  width: 80vw;
  height: 100vh;
  background-color: yellow;
}
.cate-page{
  background-color: teal;
  height: 100vh;
  display: flex;
  flex-direction:row;
}

.good-image{
  height: 7em;
  width: 7em;
  overflow: hidden;
}
.good-name{
  margin-left:.5em;
  width: calc(100% - 7.5em);
  font-size: medium;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
